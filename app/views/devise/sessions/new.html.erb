<section class="margin-top-form container w-50">
  <h2 class="text-center">Login</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                required: false,
                label: "Senha",
                input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: "Lembrar senha", as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions d-flex align-items-center justify-content-center">
      <%= f.button :submit, "Logar", class: "button-login text-center" %>
    </div>
  <% end %>
  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
  <br>
</section>
